{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flutter Web (Release) - Chrome",
        "request": "launch",
        "type": "dart",
        "args": ["flutter", "run", "--release", "-d", "chrome"],
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/lib/main.dart",
        "flutterMode": "release"
      },

      {
        "name": "Flutter Mobile - iPhone 15",
        "request": "launch",
        "type": "dart",
        "args": ["flutter", "run", "--debug", "-d", "iPhone 15"],
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/lib/main.dart",
        "flutterMode": "debug"
      }
    ]
  }